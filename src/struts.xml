<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" extends="struts-default">
		<action name="list" class="com.pms.Action.UserAction">
			<result name="success">/user_view.jsp</result>
		</action>
		
		<action name="add" class="com.pms.Action.UserAction" method="add">
			<result name="success">/index.jsp</result>
			<result name="fail">/user_add.jsp</result>
			<result name="input">/user_add.jsp</result>
				<interceptor-ref name="fileUpload">
					<param name="allowedTypes">image/png,image/gif,image/jpeg,image/pjpeg
					</param>
					<param name="maximumSize">20024000</param>
				</interceptor-ref>
				<interceptor-ref name="params">
					<param name="excludeParams">dojo\..*,^struts\..*</param>
				</interceptor-ref>
		</action>
		
		<action name="addStaff" class="com.pms.Action.UserAction" method="addStaff">
		<result name="success">/index.jsp</result>
		<result name="fail">/staff_add.jsp</result>
		<result name="input">/staff_add.jsp</result>
			<interceptor-ref name="fileUpload">
				<param name="allowedTypes">image/png,image/gif,image/jpeg,image/pjpeg</param>
				<param name="maximumSize">20024000</param>
			</interceptor-ref>
			<interceptor-ref name="params">
				<param name="excludeParams">dojo\..*,^struts\..*</param>
			</interceptor-ref>
		</action>

		<action name="login" class="com.pms.Action.GroupRegistrationAction">
			<result name="success">/GroupList.jsp</result>
			<result name="hod">/templates/hod/hodHome.jsp</result>
			<result name="admin">/templates/admin/adminHome.jsp</result>
			<result name="lecturerIncharge">/templates/lecturerIncharge/lecturerInchargeHome.jsp</result>
			<result name="fail">/index.jsp</result>
		</action>
		
		<action name="groupPage" class="com.pms.Action.GroupRegistrationAction" method="loadGroups">
			<result name="success">/GroupList.jsp</result>
			<result name="fail">/index.jsp</result>
		</action>
		

		<action name="showGroup" class="com.pms.Action.GroupRegistrationAction">
		    <result name="success">/GroupList.jsp</result>
		</action> 
		
		<action name="getGroupIndividual" class="com.pms.Action.GroupRegistrationAction" method="getListMembers">
			<result name="success">/templates/groupIndividual.jsp</result>
			<result name="fail">/lecturerSignUp.jsp</result>    
		</action>
		
		<action name="authonticateLecturer" class="com.pms.Action.LoginAction" method="authonticateLecturer">
		    <result name="success">/staff_add.jsp</result>
		    <result name="fail">/lecturerSignUp.jsp</result>
		</action>
		
		<action name="getUser" class="com.pms.Action.UserAction" method="getUserIndividual">
			<result name="success">/templates/viewUserProfile.jsp</result>
		</action>
		
		<action name="getStudentIds" class="com.pms.Action.GroupRegistrationAction" method="getMembersId">
		    <result name="success">/templates/groupAdding.jsp</result>
		</action>
		
		<action name="saveGroup" class="com.pms.Action.GroupRegistrationAction" method="addGroup">
		    <result name="success">/GroupList.jsp</result>
		</action>
		
		<action name="addcontact" class="com.pms.Action.ContactInfoAction" method="add">
			<result name="success">/contactUs_add.jsp</result>
		</action>
		
		<action name="selectLecturerInCharge" class="com.pms.Action.HodAction" method="getLecturesByNames">
			<result name="success">/templates/SepLectuerInChargeSelect.jsp</result>
		</action>
			
		<action name="saveLecturerInCharge" class="com.pms.Action.HodAction" method="saveLectureInCharge">
			<result name="success">/templates/hod/hodHome.jsp</result>
		</action>
		
		<action name="getLecturers" class="com.pms.Action.HodAction" method="getAllLecturers">
			<result name="success">/templates/SepLecturerAssigning.jsp</result>
			<result name="fail">/templates/SepLecturerAssigning.jsp</result>    
		</action>
	</package>
</struts>