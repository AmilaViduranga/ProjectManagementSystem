<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="default" extends="struts-default">
		<action name="list" class="com.pms.Action.UserAction">
			<result name="success">/user_view.jsp</result>
		</action>
		<action name="add" class="com.pms.Action.UserAction" method="add">
			<result name="success">/index.jsp</result>
			<result name="fail">/user_add.jsp</result>
		</action>

		<action name="login" class="com.pms.Action.GroupRegistrationAction">
			<result name="success">/GroupList.jsp</result>
			<result name="hod">/templates/hod/hodHome.jsp</result>
			<result name="admin">/templates/admin/adminHome.jsp</result>
			<result name="lecturerIncharge">/templates/lecturerIncharge/lecturerInchargeHome.jsp</result>
			<result name="fail">/index.jsp</result>
		</action>
		
		<action name="groupPage" class="com.pms.Action.GroupRegistrationAction" method="loadGroups">
			<result name="success">/GroupList.jsp</result>
			<result name="fail">/index.jsp</result>
		</action>
		

		<action name="showGroup" class="com.pms.Action.GroupRegistrationAction">
		    <result name="success">/GroupList.jsp</result>
		</action> 
		
		<action name="getGroupIndividual" class="com.pms.Action.GroupRegistrationAction" method="getListMembers">
			<result name="success">/templates/groupIndividual.jsp</result>
			<result name="fail">/lecturerSignUp.jsp</result>    
		</action>
		
		<action name="authonticateLecturer" class="com.pms.Action.LoginAction" method="authonticateLecturer">
		    <result name="success">/templates/lecturer/lecturerHome.jsp</result>
		    <result name="fail">/lecturerSignUp.jsp</result>
		</action>	
	</package>
</struts>